<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="hbx_CartMovie" alignment="CENTER_RIGHT" maxHeight="300.0" maxWidth="-Infinity" minHeight="300.0" minWidth="440.0" prefHeight="300.0" prefWidth="440.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.filmverleih.filmverleih.CartMovieController">
   <children>
      <ImageView fx:id="igv_CartMovieImage" fitHeight="300.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <VBox fx:id="vbx_CartMovieRightVBox" prefHeight="300.0" prefWidth="240.0">
         <children>
            <Label fx:id="lbl_CartMovieTitle" styleClass="lbl_class_CartMovieLabels" text="Label">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <HBox fx:id="hbx_CartMovieRatingDuration" maxWidth="240.0" prefHeight="20.0">
               <children>
                  <Label fx:id="lbl_CartMovieRating" text="Label">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="2.0" right="2.0" />
                     </padding>
                     <styleClass>
                        <String fx:value="lbl_class_CartMovieLabels" />
                        <String fx:value="lbl_class_CartMovieInfo" />
                     </styleClass>
                  </Label>
                  <Label fx:id="lbl_CartMovieDuration" text="Label">
                     <styleClass>
                        <String fx:value="lbl_class_CartMovieLabels" />
                        <String fx:value="lbl_class_CartMovieInfo" />
                     </styleClass>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="lbl_CartMovieYear" text="Label">
               <styleClass>
                  <String fx:value="lbl_class_CartMovieLabels" />
                  <String fx:value="lbl_class_CartMovieInfo" />
               </styleClass>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="btn_CartDeleteMovie" mnemonicParsing="false" onAction="#removeFromCart" prefHeight="50.0" prefWidth="200.0" styleClass="lbl_class_CartMovieLabels" text="Entfernen">
               <VBox.margin>
                  <Insets left="20.0" top="110.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
